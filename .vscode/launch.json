{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "Run Extension (With Mocked API Data)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "env": {
        "USE_MOCKED_API_DATA": "true"
      }
    },
    {
      "name": "Run Extension (Missing sqlite3)",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "env": {
        "USE_MOCKED_API_DATA": "true",
        "PATH": "/nonexistent"
      }
    },
    {
      "name": "Integration Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/testing/integration/main/index"
      ],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "env": {
        "USE_MOCKED_API_DATA": "true"
      }
    }
  ]
}
